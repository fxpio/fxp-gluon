{%- use 'SonatraBootstrapBundle:Block:block_bootstrap_fields.html.twig' with
        image_widget as base_image_widget -%}

{% block image_widget -%}
    {%- if ripple is defined and ripple -%}
        {%- set attr = attr|merge({'class': (attr.class|default('') ~ ' img-ripple')|trim}) -%}
    {%- endif -%}

    {{- block('base_image_widget') -}}
{%- endblock image_widget %}

{% block lookup_widget -%}
    {%- if (label is not empty or value is not empty) and attr.href is defined and attr.href is not empty -%}
        {{- block('link_widget') -}}
    {%- endif -%}
{%- endblock lookup_widget %}
