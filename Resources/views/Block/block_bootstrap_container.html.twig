{% block block_label -%}
    {%- if floating_label|default(false) is not same as(true) -%}
        {{ block('base2_block_label') }}
    {%- endif -%}
{%- endblock block_label %}

{% block block_widget_simple -%}
    {%- set block_widget_simple_before_content -%}
        {{- block('block_addon_start') -}}
        {{- block('block_floating_label_start') -}}
    {%- endset -%}
    {%- set block_widget_simple_after_content -%}
        {{- block('block_floating_label_end') -}}
        {{- block('block_addon_end') -}}
    {%- endset -%}

    {{- block('base2_block_widget_simple') -}}
{%- endblock block_widget_simple %}
