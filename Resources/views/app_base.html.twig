{%- extends "@SonatraGluon/base.html.twig" -%}

{%- require_style   '@bower/sonatra-theme-gluon-pjax/css/app-pjax.css' position='lower_priority' -%}

{%- require_script  '@bower/jquery-pjax/jquery-pjax.js'
                    '@bower/sonatra-theme-gluon-pjax/js/app-pjax.js'
-%}

{%- set body_main_attr = body_main_attr|default({})|merge({'id': "pjax-container"}) -%}

{%- block body_main -%}
    {%- block body_main_content -%}
    {%- endblock body_main_content -%}
    <script>
        window.pjaxMainScripts = undefined === window.pjaxMainScripts ? [] : window.pjaxMainScripts;
        window.pjaxMainScripts.push(function() {
            {{- inlineScriptsPosition() -}}
        });
    </script>
{%- endblock body_main -%}
