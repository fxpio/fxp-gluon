    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonatra_gluon.type.sidebar" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarType">
            <tag name="sonatra_block.type" alias="sidebar" />
        </service>

        <service id="sonatra_gluon.type.sidebar_group" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarGroupType">
            <tag name="sonatra_block.type" alias="sidebar_group" />
        </service>

        <service id="sonatra_gluon.type.sidebar_item" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarItemType">
            <tag name="sonatra_block.type" alias="sidebar_item" />
        </service>
    </services>
