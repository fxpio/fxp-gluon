<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonatra_gluon.block.type.sidebar" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarType">
            <tag name="sonatra_block.type" alias="sidebar" />
        </service>

        <service id="sonatra_gluon.block.type.sidebar_group" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarGroupType">
            <tag name="sonatra_block.type" alias="sidebar_group" />
        </service>

        <service id="sonatra_gluon.block.type.sidebar_item" class="Sonatra\Bundle\GluonBundle\Block\Type\SidebarItemType">
            <tag name="sonatra_block.type" alias="sidebar_item" />
        </service>

        <service id="sonatra_gluon.block.type.navbar_scrollable" class="Sonatra\Bundle\GluonBundle\Block\Type\NavbarScrollableType">
            <tag name="sonatra_block.type" alias="navbar_scrollable" />
        </service>

        <service id="sonatra_gluon.block.type_extension.button" class="Sonatra\Bundle\GluonBundle\Block\Extension\ButtonExtension">
            <tag name="sonatra_block.type_extension" alias="button" />
        </service>

        <service id="sonatra_gluon.block.type_extension.label" class="Sonatra\Bundle\GluonBundle\Block\Extension\LabelExtension">
            <tag name="sonatra_block.type_extension" alias="label" />
        </service>

        <service id="sonatra_gluon.block.type_extension.progress_bar" class="Sonatra\Bundle\GluonBundle\Block\Extension\ProgressBarExtension">
            <tag name="sonatra_block.type_extension" alias="progress_bar" />
        </service>

        <service id="sonatra_gluon.block.type_extension.panel" class="Sonatra\Bundle\GluonBundle\Block\Extension\PanelExtension">
            <tag name="sonatra_block.type_extension" alias="panel" />
        </service>

        <service id="sonatra_gluon.block.type_extension.checkbox" class="Sonatra\Bundle\GluonBundle\Block\Extension\CheckboxExtension">
            <tag name="sonatra_block.type_extension" alias="checkbox" />
        </service>

        <service id="sonatra_gluon.block.type_extension.navbar_brand" class="Sonatra\Bundle\GluonBundle\Block\Extension\NavbarBrandExtension">
            <tag name="sonatra_block.type_extension" alias="navbar_brand" />
        </service>
    </services>
</container>
