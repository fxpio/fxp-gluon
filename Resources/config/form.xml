    <services>
        <service id="sonatra_gluon.form.type_extension.choice" class="Sonatra\Bundle\GluonBundle\Form\Extension\ChoiceExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\ChoiceType" />
        </service>

        <service id="sonatra_gluon.form.type_extension.button" class="Sonatra\Bundle\GluonBundle\Form\Extension\ButtonExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\ButtonType" />
        </service>

        <service id="sonatra_gluon.form.type_extension.checkbox" class="Sonatra\Bundle\GluonBundle\Form\Extension\CheckboxExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CheckboxType" />
        </service>

        <service id="sonatra_gluon.form.type_extension.textarea" class="Sonatra\Bundle\GluonBundle\Form\Extension\TextareaExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TextareaType" />
        </service>

