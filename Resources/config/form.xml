        </service>

        <service id="sonatra_gluon.form.type_extension.floating_label.percent" class="Sonatra\Bundle\GluonBundle\Form\Extension\FloatingLabelExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\PercentType" />
