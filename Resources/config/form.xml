        </service>

        <service id="sonatra_gluon.form.type_extension.floating_label.collection" class="Sonatra\Bundle\GluonBundle\Form\Extension\StaticFloatingLabelExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CollectionType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\CollectionType</argument>
        </service>
