<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonatra_gluon.form.type_extension.button" class="Sonatra\Bundle\GluonBundle\Form\Extension\ButtonExtension">
            <tag name="form.type_extension" alias="button" />
        </service>

        <service id="sonatra_gluon.form.type_extension.checkbox" class="Sonatra\Bundle\GluonBundle\Form\Extension\CheckboxExtension">
            <tag name="form.type_extension" alias="checkbox" />
        </service>

        <service id="sonatra_gluon.form.type_extension.textarea" class="Sonatra\Bundle\GluonBundle\Form\Extension\TextareaExtension">
            <tag name="form.type_extension" alias="textarea" />
        </service>

        <service id="sonatra_gluon.form.type_extension.button_ripple" class="Sonatra\Bundle\GluonBundle\Form\Extension\RippleExtension">
            <tag name="form.type_extension" alias="button" />
            <argument>button</argument>
        </service>

        <service id="sonatra_gluon.form.type.toggle" class="Sonatra\Bundle\GluonBundle\Form\Type\ToggleType">
            <tag name="form.type" alias="toggle" />
        </service>
    </services>
</container>
